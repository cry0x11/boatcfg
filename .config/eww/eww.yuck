(deflisten current-json :initial "[]"
    `ristate -t | stdbuf -o0 sed '/{"tags":{}}/d; s/├─┤ │/[]/g; s/│ ├─┤/[]/g; s/│   │/[1]/g; s/│ /[/; s/ │/]/;'`
)

(deflisten occupied-tags :initial "1" 
    `ristate -vt | stdbuf -o0 sed '/{"viewstag":{}}/d'`
)

(deflisten pomo :initial "00:00"
    `tail -f ~/.cache/boatcfg/pomo/log`
)

(defpoll time :initial ""
              :interval "10s"
    `date +"%a %Y/%m/%d %I:%M %p"`)

(defpoll battery_percent :initial "0"
                         :interval "1s"
    `~/.scripts/bar/battery percent`)

(defpoll battery_state :initial "0"
                       :interval "1s"
    `~/.scripts/bar/battery state`)

(defpoll prayerTime :initial ""
                    :interval "1s"
    `~/.scripts/bar/prayerTime t`)

(defpoll prayer :initial ""
                :interval "1s"
    `~/.scripts/bar/prayerTime q`)

(defpoll ethernet_state :initial "down"
                        :interval "2s"
    `~/.scripts/bar/network eth state`)

(defpoll volume :initial "0"
                :interval "86400s"
  `pamixer --get-volume`)

(defpoll volume_mute :initial "false"
                     :interval "86400s"
  `pamixer --get-mute`)

(defvar rev_pomo false)
(defvar pomo_icon "󱎫")
(defvar pomo_break false)
(defvar pomo_button "0")

(defvar rev_prayer false)
(defvar rev_date false)
(defvar rev_battery false)
(defvar rev_mode false)
(defvar rev_recording false)
(defvar recording_paused false)
(defvar quran_button "0")

(defwidget bar []

  	(centerbox :orientation "h"
    (left)
    (middle)
    (right)
))


(defwidget middle []
    (box
        :space-evenly false
        :class "side"
        (revealer
            :reveal {rev_recording}
            :transition "slideright"
            :duration "350ms"
            (label
                :class "module mode"
                :text "${recording_paused == true ? "" : "󰑊"} Rec"
            )
        )
        
        (box
        :class "quran_radio"
        :space-evenly false
        :style `${quran_button == "0" ? "background-color: #5a524c; color: #d4be98" : "background-color: #a9b665; color: #282828"}`
          (label
              :text "Quran Radio"
          )
          (button
            :onclick `${quran_button == "0" ? "~/.scripts/bar/cairoQuran play" : "~/.scripts/bar/cairoQuran stop"}`
            :class "quran-button"
            `${quran_button == "1" ? "" : ""}`
          )
        )
    )
)

(defwidget right []
    (box
        :class "side"
        :orientation "h"
        :halign "end"
        :space-evenly false
        :spacing 0

        (systray 
            :class "systray"
            :icon-size 22
            :space-evenly true
            :spacing 8
        )
        
        (box
          :class "module"
          :space-evenly false
          :style '${battery_percent > 25 ? "background-color: #a9b665;" : battery_state == 0 ? "background-color: #ea6962;" : "background-color: #a9b665;" }'

          (label
              :class "battery_state"
              :text `${battery_state == 1 ? "󱐋" : battery_percent == 100 ? "" : battery_percent >= 75 ? "" : battery_percent >= 50 ? "" : battery_percent >= 25 ? "" : "" }`
          )
          (label
              :class "battery_percent"
              :text `${battery_percent}%`
          )
        )

        (label
          :class "module"
          :style '${ethernet_state == "up" ? "background-color: #a9b665;" : "background-color: #5a524c; color:#d4be98"}'
          :text `${ethernet_state == "up" ? "󰈀" : ""}`
        )

        (label
          :class "module"
          :style '${volume_mute == "false" ? "background-color: #a9b665;" : "background-color: #5a524c; color:#d4be98" }'
          :text `${volume_mute == "false" ? "" : "" } ${volume}%`
        )

        (revealer
            :reveal `${prayer == "" ? false : rev_prayer}`
            :transition "slideleft"
            :duration "350ms"
            (label
                :class "module prayer"
                :text "${prayer}"
            )
        )

        (eventbox
            :onhover "eww update rev_prayer=true"
            :onhoverlost "eww update rev_prayer=false"
            (label
                :class "module prayer"
                :text " ${prayerTime}"
            )
        )


        (revealer
            :reveal rev_date
            :transition "slideleft"
            :duration "350ms"
            (label
                :class "module date"
                :text `${substring(time, 0, 14)}`
            )
        )
        (eventbox
            :onhover "eww update rev_date=true"
            :onhoverlost "eww update rev_date=false"
            (label
                :class "module clock"
                :text "${substring(time, 15, 8)}"
            )
        )
    )
)

(defwidget tag [id symbol]
    (eventbox
        :onclick `riverctl set-focused-tags \`echo "2^${id - 1}" | bc -l\``
        ( box 
		:class `tag ${id == current-json["tags"]["LGDisplay"][0] ? "active-tag" : matches(occupied-tags["viewstag"]["LGDisplay"], id) == true ? "occupied-tag" : "empty-tag"}` 
          {symbol}
        )
    )
)

(defvar tags "[1, 2, 3, 4, 5, 6, 7, 8, 9]")
(defvar tagSymbols `["", "󱟱", "", "", "", "", "", "󰭹", "󰂔"]`)

(defwidget left []
    (box
        :class "side"
       	:orientation "h"
       	:space-evenly false
        :halign "start"
        :spacing 3
        (for tagnum in tags
          (tag :id tagnum
               :symbol `${tagSymbols[tagnum - 1]}`)
        )
        (label 
		    :class "layout"
            :justify "center"
		    :text `${current-json["layout"] == "null" ? "[]" : current-json["layout"]}`
        )

        (revealer
            :reveal `${rev_pomo}`
            :transition "slideleft"
            :duration "350ms"
          (box
          :class "module"
          :space-evenly false
          :style `${pomo_button == "1" ? "background-color:#5a524c; color:#d4be98" : pomo_break == false ? "background-color: #ea6962;" : "background-color: #a9b665"}`
            (label
              :text `${pomo_icon} ${pomo} `
            )

            (button
              :onclick `${pomo_button == "0" ? "~/.scripts/pomo pause" : "~/.scripts/pomo resume"}`
              `${pomo_button == "0" ? "" : ""} `
            )

            (button
              :onclick `~/.scripts/pomo stop`
              ""
            )
          )
        )

        (revealer
            :reveal {rev_mode}
            :transition "slideright"
            :duration "350ms"
            (label
                :class "module mode"
                :text "R"
            )
        )
    )
)


(defwindow bar
  :monitor 0
  :exclusive true
  :class "bar"
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0.7%"
                      :width "99.3%"
                      :height "3.9%"
                      :anchor "top center")
  (bar)
)

(defwindow tasks
  :monitor 0
  :exclusive false
  :class "tasks"
  :windowtype "normal"
  :geometry (geometry :x "25%"
                      :y "10.4%"
                      :width "50%"
                      :height "70%")
  (label :text "hello world")
)

