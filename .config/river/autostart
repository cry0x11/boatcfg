#!/bin/bash

wallpaper="`ls -l --color=never ~/Pictures/wallpapers/ | awk '{print $9}' | sed '/^$/d' | shuf -n 1`"

function killer { kill -SIGINT `pgrep $1`; }

killer lxpolkit
killer eww
killer dunst
killer foot
killer gammastep
killer kdeconnectd
killer swww-daemon
killer wl-paste
killer pipewire
killer pipewire-pulse
killer wireplumber

swww-daemon --format xrgb &
swww img ~/Pictures/wallpapers/"$wallpaper" &
dunst &
lxpolkit &
foot -s &
gammastep -O 3500 &
/usr/lib/kdeconnectd &
fcitx5 -d --replace &
eww open bar &
wl-paste --type text --watch cliphist store &
wl-paste --type image --watch cliphist store &
wl-paste --primary --watch cliphist store &
pipewire &
pipewire-pulse &
wireplumber &

#swaybg -m fill -i ~/Pictures/wallpapers/"$wallpaper" &
